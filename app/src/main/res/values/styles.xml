<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/color_black_50</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoTitle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.NoTitle" />

    <style name="TextLager">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TextSmall">TextSmall>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextNormal.White" parent="TextNormal">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextSmall.Gray" parent="TextSmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>
</resources>
