<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLager">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TextSmall">TextSmall>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextNormal.Blue" parent="TextNormal">
        <item name="android:textColor">@color/color_blue_4e7bcb</item>
    </style>

    <style name="TextNormal.White" parent="TextNormal">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextSmall.Gray" parent="TextSmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>
</resources>
